{
  "name": "kuhp-analyzer",
  "version": "1.0.0",
  "description": "AI-powered KUHP difference analyzer with Google ADK",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "docker-compose up --build",
    "dev:detached": "docker-compose up -d --build",
    "stop": "docker-compose down",
    "clean": "docker-compose down --volumes --rmi all",
    "logs": "docker-compose logs -f",
    "test": "echo \"Tests will be added here\"",
    "deploy": "./deployment/deploy.sh",
    "deploy:simple": "./deployment/deploy_simple.sh",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "backend:dev": "cd backend && python main.py",
    "install:all": "cd frontend && npm install && cd ../backend && pip install -r requirements.txt"
  },
  "keywords": ["kuhp", "ai", "gemini", "law", "analysis", "adk", "google-cloud"],
  "author": "KUHP Analyzer Team",
  "license": "MIT",
  "devDependencies": {},
  "workspaces": [
    "frontend"
  ]
}